/**my.wxss**/


.butAdd{
  position: absolute;
  bottom: 0px;
  width: 100%;
  height:40px;
  line-height: 40px;
  color:#FFFFFF;
  background-color:#E64340;
  text-align: center;
}


.row{
  background: #fff;
  padding: 8px 0;
  position: relative;
  border-bottom: 8px solid #f8f8f8;
}

.row .cell{
  padding: 8px 16px;
} 
.row .cell label{
  color: #333;
  padding: 4px 0;
  display: block;
}
.row .cell text{
  padding: 4px 0;
  color: #888;
  display: block;
}

.row .cell-flex{
  padding: 8px 8px 0 8px;
  display:flex;
  justify-content:space-between;
}

.row .cell-flex .item{
  display: flex;
  justify-content:space-between;
  line-height:25px;
}
.row .cell-flex .item icon{
  vertical-align: bottom;
  margin-left: 8px;
  color:#888;
}

.cus-hr{
  margin:0px 8px 0px 8px;
}

