/** orderInfo.wxss **/
page{
  background: #fff;
}

.list.justify, .list .item{
	background: #efeff4;	
}



.content .scan-success{
	margin: auto calc((100% - 93px)/2);
	margin-top: 50px;
	margin-bottom: 25px;
}

.content .title{
	font-size: 20px;
	color: #000000;
	text-align: center;
}
 

.content .divider{
	display: block;
	text-align: center;
	position: relative;
	margin-top: 10px;
}


.content .divider_{
    content: '';                 /*CSS伪类用法*/
    position: absolute;         /*定位背景横线的位置*/
    top: 52%;
    background: #cacaca;       /*宽和高做出来的背景横线*/
    width: 20%;
    height: 1px;
    /*left: 0;*/
}

.mouths{
	display:-webkit-box;
	-webkit-box-pack:center;
	margin: 20px 0;
}
.mouths .mouth{
	background: #F6ECEE;
	border-radius: 6px;
	color: #8F1A30;
	font-size: 17px;
	padding: 7px 13px;
	line-height: normal;
	margin: 5px;
}
