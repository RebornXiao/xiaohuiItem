/**my.wxss**/
page{
  background: #efeff4;
}

/** 头部 **/
.hd{
  width: 100%;
  height: 95px;
  background: #8E192F;
  display:-webkit-box;
  -webkit-box-pack:start;
}
.hd .img-bj{
  margin: 8px auto;
}
.hd .text-login{
  color: #fff;
  text-align: center;
}

.islogin .img-bj{
  width: 60px;
  height: 60px;
  background: #fff;
  margin: 15px 15px;
  border-radius: 50px; 

}

.portrait{
  width: 56px;
  height: 56px;
  margin-top: 2px;
  margin-left: 2px;
  border-radius: 50px;
  background: #fff;
}
.islogin .info{
  margin-top: 20px;
}
.islogin .info text{
  color: #fff;
  font-size: 16px;
  line-height: 25px;
}
.islogin .text-login{
  display: none;
}


/** buts **/
.buts{
  padding: 10px 0 5px 0;
  background:#fff;
  margin: 15px 0;
  display:-webkit-box;
  -webkit-box-pack:center;
}
.buts .item{
  width: 23%;
  text-align: center;
}
.buts .item text{
  font-size: 13px;
  line-height: 35px;
}

.logout{
  padding: 8px 0;
  text-align: center;
  width: 100%;
  background: #fff;
}

.navigator-arrow {
  padding-right:35rpx;
}

.navigator-arrow::after{
  right: 0;
}